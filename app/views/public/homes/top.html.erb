<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>Studuopi</h1>
      <div class="slider">
        <img src="/assets/gazou2.jpg" width="480px" height="640px" alt="">
      </div>
      <%#= Date.current.strftime(‘%Y/%m/%d’) %>
      <br>
      <h1>本日の日付
        <%= Date.current.strftime('%Y/%m/%d') %>
        <br>
      </h1>
      <div class="row">
        <div class="my-box col-12">
          <% if customer_signed_in? %>
          <%#= link_to "日付選択", calendars_index_path %>
          <% @customer.each do |customer| %>
          <% if current_customer != customer %>
          <%#= link_to 'chatを始める', chat_path(customer.id)%>
          <% end %>
          <% end %>
          <% elsif admin_signed_in? %>
          <%= link_to 'メッセージ', chat_path(@admin.id) %>
          <% else %>
          <%= link_to "Log in", new_customer_session_path, class:"btn btn-primary col-xs-10 col-xs-offset-2" %><br><br>
          <%= link_to "Sign Up", new_customer_registration_path, class:"btn btn-success col-xs-10 col-xs-offset-2" %><br><br>
          <%= link_to "管理者ログイン", new_admin_session_path, class:"btn btn-success col-xs-10 col-xs-offset-2" %><br><br>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>