
<div class="container">
  <div class="row">
    <div class="col-mx-6">
      <h1>予約確認</h1>
        <table class="table imte">
        <th>フォトグラファー</th>
        <th>日付</th>
        <th>時間</th>
        <th></th>
        <th></th>
        <th></th>
        <tr>
          <% @reservation.each do |reservation| %>
          <td><%= reservation.admin.name %></td>
          <td><%= reservation.reservation_date.strftime('%Y/%m/%d') %></td>
          <td>
            <%= form_with model:@reservation, url: calendar_edit_path(reservation), method: :get, local:true  do |f| %>
            <td><%= reservation.time %></td>
            <td><%= f.submit "修正する", class:"btn btn-outline-success"%></td>
            <td><%= link_to "キャンセル", calendar_destroy_path(reservation), method: :delete, class:"btn btn-danger" %></td>
            <% end %>
          </td>
          
        </tr>
        <% end %>
        </table>
    </div>
  </div>
</div>